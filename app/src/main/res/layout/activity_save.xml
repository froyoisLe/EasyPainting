<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveActvity">
    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageButton
                android:layout_marginLeft="16dp"
                android:id="@+id/back_drawing"
                android:layout_gravity="center"
                android:padding="4dp"
                android:visibility="visible"
                android:src="@mipmap/back"
                android:scaleType="centerCrop"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_weight="6"
            android:background="@mipmap/congr"
            android:layout_width="match_parent"
            android:layout_height="0dp">
           <ImageView
               android:id="@+id/show_drawing"
               android:layout_marginTop="33dp"
               android:src="#FFFFFFFF"
               android:scaleType="fitXY"
               android:background="@drawable/bg_bar"
               android:layout_marginStart="75dp"
               android:layout_marginEnd="70dp"
               android:layout_marginBottom="100dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:gravity="top"
            android:weightSum="2"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:id="@+id/new_drawing"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="60dp"
                android:layout_weight="1"
                android:background="@mipmap/new_paint"
                android:layout_width="0dp"
                android:layout_height="45dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:text="再画一幅"
                    android:gravity="center"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="17sp"
                    android:textColor="@color/tip_txt"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/download"
                android:orientation="horizontal"
                android:layout_marginRight="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/download"
                android:layout_marginBottom="60dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp">
                <ImageView
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:text="下载画作"
                    android:gravity="center"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="17sp"
                    android:textColor="@color/tip_txt"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>